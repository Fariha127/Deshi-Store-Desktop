<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo_finding_bd_products.CategoryProductsController">
    <top>
        <VBox spacing="0.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="120.0" prefWidth="100.0" spacing="15.0" style="-fx-background-color: linear-gradient(to bottom, #2E7D32, #4CAF50);" BorderPane.alignment="CENTER">
                    <effect>
                        <DropShadow offsetY="2.0">
                            <color>
                                <Color blue="0.20000000298023224" />
                            </color>
                        </DropShadow>
                    </effect>

                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="200.0" spacing="15.0">
                     <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBack" style="-fx-background-color: white; -fx-background-radius: 30;" text="â†" textFill="#2e7d32">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="15.0" />
                           </HBox.margin>
                        </Button>
                              <Label text="Product Details" textFill="WHITE">
                                  <font>
                                      <Font name="Arial Rounded MT Bold" size="40.0" />
                                  </font>
                                  <padding>
                                      <Insets bottom="20.0" left="12.0" top="20.0" />
                                  </padding>
                              </Label>
                     </children></HBox>
                        <Region prefHeight="200.0" prefWidth="200.0" />
                    </children>
                </VBox>
                <!-- Horizontal Navigation Bar -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0; -fx-padding: 15 25 15 25;">
                    <children>
                        <Button fx:id="homeBtn" mnemonicParsing="false" onAction="#showHome" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: white; -fx-text-fill: #708090; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 25; -fx-border-color: #E0E0E0; -fx-border-radius: 25; -fx-cursor: hand; -fx-alignment: CENTER;" text="Home" />
                        <Button fx:id="categoriesBtn" mnemonicParsing="false" onAction="#showCategories" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: white; -fx-text-fill: #708090; -fx-font-size: 14px; -fx-background-radius: 25; -fx-border-color: #E0E0E0; -fx-border-radius: 25; -fx-cursor: hand; -fx-font-weight: bold;" text="Product Categories" />
                        <Button fx:id="newlyAddedBtn" mnemonicParsing="false" onAction="#showNewlyAdded" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: white; -fx-background-radius: 25; -fx-text-fill: #708090; -fx-font-size: 14px; -fx-cursor: hand; -fx-border-radius: 25; -fx-border-color: #E0E0E0; -fx-font-weight: bold;" text="Newly Added" />
                        <Button fx:id="favouritesBtn" mnemonicParsing="false" onAction="#showFavourites" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-background-radius: 25; -fx-border-radius: 25; -fx-text-fill: #708090; -fx-font-size: 14px; -fx-font-weight: bold;" text="My Favourites" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <padding>
        <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
    </padding>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: white; -fx-background: white; -fx-cursor: hand;" BorderPane.alignment="CENTER">

        </ScrollPane>
    </center>
</BorderPane>
