<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finding_bd_products.VendorProductsListController">
    <top>
        <VBox spacing="0.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" style="-fx-background-color: linear-gradient(to bottom, #2E7D32, #4CAF50);" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="  Deshi Store" textFill="WHITE">
                            <font>
                                <Font name="Arial Rounded MT Bold" size="48.0" />
                            </font>
                            <padding>
                                <Insets left="12.0" top="20.0" />
                            </padding>
                        </Label>
                        <Region prefHeight="50.0" prefWidth="200.0" VBox.vgrow="SOMETIMES" />
                        <HBox alignment="CENTER" prefHeight="50.0" spacing="20.0" style="-fx-padding: 0 25 20 25;">
                            <children>
                                <Button fx:id="backToDashboardBtn" mnemonicParsing="false" onAction="#goBackToDashboard" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;" text="Back to Dashboard">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                                <Button fx:id="addProductBtn" mnemonicParsing="false" onAction="#goToAddProduct" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;" text="Add Product">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #FF6B35; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" text="Logout">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <Region prefHeight="20.0" />
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="20.0" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Text text="Product Status" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2E7D32;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Refresh" onAction="#refreshProducts" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-font-weight: bold;"/>
            </HBox>

            <TableView fx:id="productsTable" prefHeight="500">
                <columns>
                    <TableColumn fx:id="productIdColumn" text="Product ID" prefWidth="120"/>
                    <TableColumn fx:id="productNameColumn" text="Name" prefWidth="180"/>
                    <TableColumn fx:id="productCategoryColumn" text="Category" prefWidth="120"/>
                    <TableColumn fx:id="productPriceColumn" text="Price (BDT)" prefWidth="100"/>
                    <TableColumn fx:id="productStatusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="productReasonColumn" text="Rejection Reason" prefWidth="280"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
