<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.finding_bd_products.MyProfileController"
            prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: #E8F5E9;">

    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: linear-gradient(to bottom, #2E7D32, #4CAF50); -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button text="â† Back to Home" onAction="#goToHome"
                        style="-fx-background-color: white; -fx-text-fill: #2E7D32; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"
                        prefHeight="35.0" prefWidth="140.0"/>
                <Button fx:id="myProductsBtn" text="Product Status" onAction="#goToMyProducts"
                        style="-fx-background-color: linear-gradient(to bottom right, #9C27B0, #E91E63); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"
                        prefHeight="35.0" prefWidth="130.0" visible="false" managed="false"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="My Profile" textFill="white">
                    <font>
                        <Font name="System Bold" size="28"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="logoutBtn" text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #FF6B35; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"
                        prefHeight="35.0" prefWidth="100.0"/>
            </HBox>
        </VBox>
    </top>

    <!-- Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #E8F5E9; -fx-background-color: #E8F5E9;">
            <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 40;">
                <!-- Profile Card -->
                <VBox alignment="TOP_CENTER" spacing="25" 
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                      maxWidth="600">
                
                <Label text="Personal Information" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>
                
                <!-- Full Name -->
                <VBox spacing="8">
                    <Label text="Full Name" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <TextField fx:id="fullNameField" promptText="Enter your full name" editable="false"
                               style="-fx-background-color: #F0F0F0; -fx-background-radius: 5; -fx-font-size: 14px; -fx-padding: 10;"
                               prefWidth="520"/>
                </VBox>

                <!-- Email (Read-only) -->
                <VBox spacing="8">
                    <Label text="Email" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="emailField" editable="false"
                                   style="-fx-background-color: #F0F0F0; -fx-background-radius: 5; -fx-font-size: 14px; -fx-padding: 10;"
                                   prefWidth="400" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="sendCodeBtn" text="Send Code" visible="false" managed="false"
                                onAction="#handleSendVerificationCode"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 10 20;"
                                prefWidth="110"/>
                    </HBox>
                </VBox>

                <!-- Email Verification Code -->
                <VBox fx:id="verificationCodeBox" spacing="8" visible="false" managed="false">
                    <Label text="Verification Code" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="verificationCodeField" promptText="Enter 6-digit code"
                                   style="-fx-background-color: #C9F6C1; -fx-background-radius: 5; -fx-font-size: 14px; -fx-padding: 10;"
                                   prefWidth="400" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="verifyBtn" text="Verify" onAction="#handleVerifyCode"
                                style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 10 20;"
                                prefWidth="110"/>
                    </HBox>
                    <Label fx:id="verificationStatusLabel" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                </VBox>

                <!-- Phone Number -->
                <VBox spacing="8">
                    <Label text="Phone Number" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <TextField fx:id="phoneField" promptText="Enter your phone number" editable="false"
                               style="-fx-background-color: #F0F0F0; -fx-background-radius: 5; -fx-font-size: 14px; -fx-padding: 10;"
                               prefWidth="520"/>
                </VBox>

                <!-- Date of Birth -->
                <VBox spacing="8">
                    <Label text="Date of Birth" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <TextField fx:id="dobField" promptText="YYYY-MM-DD" editable="false"
                               style="-fx-background-color: #F0F0F0; -fx-background-radius: 5; -fx-font-size: 14px; -fx-padding: 10;"
                               prefWidth="520"/>
                </VBox>

                <!-- Gender -->
                <VBox spacing="8">
                    <Label text="Gender" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <TextField fx:id="genderField" editable="false"
                               style="-fx-background-color: #F0F0F0; -fx-background-radius: 5; -fx-font-size: 14px; -fx-padding: 10;"
                               prefWidth="520"/>
                    <ComboBox fx:id="genderComboBox" promptText="Select gender" visible="false" managed="false"
                              style="-fx-background-color: #C9F6C1; -fx-font-size: 14px;"
                              prefWidth="520" prefHeight="40"/>
                </VBox>

                <!-- City -->
                <VBox spacing="8">
                    <Label text="City" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <TextField fx:id="cityField" promptText="Enter your city" editable="false"
                               style="-fx-background-color: #F0F0F0; -fx-background-radius: 5; -fx-font-size: 14px; -fx-padding: 10;"
                               prefWidth="520"/>
                </VBox>

                <!-- Password Section -->
                <Separator prefWidth="520"/>
                
                <Label fx:id="changePasswordLabel" text="Change Password (Optional)" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;" visible="false" managed="false"/>
                
                <!-- Current Password -->
                <VBox fx:id="currentPasswordBox" spacing="8" visible="false" managed="false">
                    <Label text="Current Password" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <PasswordField fx:id="currentPasswordField" promptText="Enter current password"
                                   style="-fx-background-color: #C9F6C1; -fx-background-radius: 5; -fx-font-size: 14px; -fx-padding: 10;"
                                   prefWidth="520"/>
                </VBox>

                <!-- New Password -->
                <VBox fx:id="newPasswordBox" spacing="8" visible="false" managed="false">
                    <Label text="New Password" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <PasswordField fx:id="newPasswordField" promptText="Enter new password"
                                   style="-fx-background-color: #C9F6C1; -fx-background-radius: 5; -fx-font-size: 14px; -fx-padding: 10;"
                                   prefWidth="520"/>
                </VBox>

                <!-- Confirm New Password -->
                <VBox fx:id="confirmPasswordBox" spacing="8" visible="false" managed="false">
                    <Label text="Confirm New Password" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password"
                                   style="-fx-background-color: #C9F6C1; -fx-background-radius: 5; -fx-font-size: 14px; -fx-padding: 10;"
                                   prefWidth="520"/>
                </VBox>

                <!-- Buttons -->
                <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                    <Button fx:id="editBtn" text="Edit Profile" onAction="#handleEditProfile"
                            style="-fx-background-color: linear-gradient(to bottom, #2E7D32, #4CAF50); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"
                            prefHeight="45.0" prefWidth="180.0"/>
                    <Button fx:id="saveBtn" text="Save Profile" onAction="#handleSaveProfile" visible="false" managed="false"
                            style="-fx-background-color: linear-gradient(to bottom, #2E7D32, #4CAF50); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"
                            prefHeight="45.0" prefWidth="180.0"/>
                    <Button fx:id="cancelBtn" text="Cancel" onAction="#handleCancel" visible="false" managed="false"
                            style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"
                            prefHeight="45.0" prefWidth="120.0"/>
                </HBox>
            </VBox>
        </VBox>
        </ScrollPane>
    </center>
</BorderPane>
